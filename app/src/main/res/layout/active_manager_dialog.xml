<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/active_manager_dialog_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/active_manager_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>
    </RelativeLayout>

    <View android:id="@+id/h_bar"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_below="@id/active_manager_dialog_title_layout"/>

    <RelativeLayout
        android:id="@+id/active_manager_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_bar"
        android:layout_marginTop="2dp"
        >

        <EditText
            android:id="@+id/event_identifiant_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/manager_identifiant_edit_hint"
            android:background="@drawable/rounded_edittext"
            />

    </RelativeLayout>

    <View android:id="@+id/b_bar"
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_below="@id/active_manager_layout"/>

    <RelativeLayout
        android:id="@+id/active_manager_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/active_manager_layout">
        <Button
            android:id="@+id/validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_validate_text"
            android:layout_alignParentLeft="true"
            android:textColor="@color/cyan_blue"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel_text"
            android:layout_alignParentRight="true"
            android:textColor="@color/cyan_blue"/>
    </RelativeLayout>
</RelativeLayout>