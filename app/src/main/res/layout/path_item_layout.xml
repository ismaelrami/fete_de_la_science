<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/path_cardview_container"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#fff"
    >

    <View android:layout_height="1px" android:layout_width="match_parent" android:background="#000000"/>

    <View android:layout_height="1px" android:layout_width="match_parent" android:background="#000000" />
    <RelativeLayout
        android:id="@+id/path_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/author"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="80dp">
        </TextView>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_below="@id/author"
            android:layout_marginLeft="80dp">
        </TextView>

        <TextView
            android:id="@+id/events_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment"
            android:layout_marginLeft="80dp">
        </TextView>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/rowRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/comment"
            android:layout_alignEnd="@+id/comment"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:clickable="true"
            android:shadowColor="#22000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:layout_marginTop="10dp"
            android:text="{fa-angle-right}"
            android:textSize="20sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>


